<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView

        android:textAlignment="center"
        android:text="Medi Past Personal Health Application"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"

        />

    <LinearLayout
        android:layout_width="300dp"
        android:orientation="horizontal"
        android:layout_height="140dp">

  <android.support.v7.widget.CardView
      android:layout_width="140dp"
      android:layout_height="140dp">

        <LinearLayout

            android:id="@+id/doctor"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:orientation="vertical">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:src="@drawable/addoctor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Add Doctor profile "
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="13sp"

                android:textStyle="bold" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp">

            <LinearLayout
                android:id="@+id/doctorlist"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:src="@drawable/doctorlist" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Doctor  List"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="13sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="300dp"
        android:orientation="horizontal"
        android:layout_height="140dp">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/addmedicine"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/addmedicine" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Add Medicine         Histor"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="13sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/medicinelist"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/medicinelist" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="View all  medicle history"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="13sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
    </LinearLayout>





